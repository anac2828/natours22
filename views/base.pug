doctype html
html 
  head
    block head
      title Natours | #{title}

      link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
      //- css/styles and img/ are in the public folder
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shorcut icon' type='image/png' href='/img/favicon.png')
      script(src='https://js.stripe.com/v3/')
      script(defer src="/js/bundle.js")
      
//- The alert is passed on from the viewRoute alert middleware. Message will be displayed with frontend js
body(data-alert=`${alert ? alert : ''}`)
  //- HEADER
  include _header
  
  //- CONTENT
  block content
    h1 Placeholder text

  //- FOOTER
  include _footer